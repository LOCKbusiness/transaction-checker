<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project transactionchecker with libraries in sub-folder">
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/../../.."/>
    <property name="dir.jarfile" value="${executable_directory}"/>
    
    <target name="create_executable">
        <jar destfile="${dir.jarfile}/transactionserver.jar">
            <manifest>
                <attribute name="Main-Class" value="ch.dfx.transactionserver.TransactionServerMain"/>
                <attribute name="Class-Path" value=". transactionserver_lib/commons-lang3-3.12.0.jar transactionserver_lib/commons-text-1.9.jar transactionserver_lib/commons-io-2.11.0.jar transactionserver_lib/httpclient-4.5.13.jar transactionserver_lib/commons-logging-1.2.jar transactionserver_lib/commons-codec-1.11.jar transactionserver_lib/httpcore-4.4.15.jar transactionserver_lib/httpmime-4.5.13.jar transactionserver_lib/gson-2.8.7.jar transactionserver_lib/log4j-api-2.17.2.jar transactionserver_lib/log4j-core-2.17.2.jar transactionserver_lib/h2-2.1.214.jar transactionserver_lib/jsr305-3.0.2.jar"/>
            </manifest>
            <fileset dir="${dir.buildfile}/target/classes"/>
        </jar>
        
        <delete dir="${dir.jarfile}/transactionserver_lib"/>
        <mkdir dir="${dir.jarfile}/transactionserver_lib"/>
        
        <copy file="${maven_directory}/org/apache/commons/commons-lang3/3.12.0/commons-lang3-3.12.0.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/org/apache/commons/commons-text/1.9/commons-text-1.9.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/commons-io/commons-io/2.11.0/commons-io-2.11.0.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/org/apache/httpcomponents/httpclient/4.5.13/httpclient-4.5.13.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/commons-logging/commons-logging/1.2/commons-logging-1.2.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/commons-codec/commons-codec/1.11/commons-codec-1.11.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/org/apache/httpcomponents/httpcore/4.4.15/httpcore-4.4.15.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/org/apache/httpcomponents/httpmime/4.5.13/httpmime-4.5.13.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/com/google/code/gson/gson/2.8.7/gson-2.8.7.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/org/apache/logging/log4j/log4j-api/2.17.2/log4j-api-2.17.2.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/org/apache/logging/log4j/log4j-core/2.17.2/log4j-core-2.17.2.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/com/h2database/h2/2.1.214/h2-2.1.214.jar" todir="${dir.jarfile}/transactionserver_lib"/>
        <copy file="${maven_directory}/com/google/code/findbugs/jsr305/3.0.2/jsr305-3.0.2.jar" todir="${dir.jarfile}/transactionserver_lib"/>
    </target>
</project>
